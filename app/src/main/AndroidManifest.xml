<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.wazunga.findit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".activities.PlacesActivity"></activity>
        <activity android:name=".activities.PlaceActivity" />
        <activity android:name=".activities.NetworkActivity" />
        <activity
                android:name=".activities.Slide3"
                android:theme="@style/AppTheme_None" />
        <activity
                android:name=".activities.Slide2"
                android:theme="@style/AppTheme_None" />
        <activity
                android:name=".activities.Slide1"
                android:theme="@style/AppTheme_None" />
        <activity
                android:name=".activities.CategoryActivity"
                android:theme="@style/AppTheme_every" />
        <activity
                android:name=".Welcome"
                android:theme="@style/AppTheme_welcome" />
        <activity
                android:name=".activities.MainActivity"
                android:theme="@style/AppTheme_None">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>